<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- ====== BASIC FILE RULES ====== -->

    <!-- Enforce max line length -->
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>

    <!-- Enforce newline at end of file -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Detect trailing whitespace: Checkstyle 10.x compatible -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Trailing whitespace found."/>
    </module>


    <module name="TreeWalker">

        <!-- ====== NAMING RULES ====== -->

        <module name="LocalVariableName"/>
        <module name="MemberName"/>
        <module name="MethodName"/>
        <module name="TypeName"/>

        <!-- Ensures braces around if/else/loops -->
        <module name="NeedBraces"/>

        <!-- ====== CODE STRUCTURE & FORMATTING ====== -->

        <!-- Operators must have whitespace around them -->
        <module name="WhitespaceAround"/>

        <!-- No empty try/catch/if blocks unless allowed -->
        <module name="EmptyBlock"/>

        <!-- Visibility rules (SonarLint does not enforce these fully) -->
        <module name="VisibilityModifier">
            <property name="protectedAllowed" value="true"/>
            <property name="packageAllowed" value="true"/>
        </module>

        <!-- Enforce 'final' on effectively-final locals -->
        <module name="FinalLocalVariable"/>

        <!-- ====== IMPORT RULES ====== -->

        <!-- No wildcard imports -->
        <module name="AvoidStarImport"/>

    </module>

</module>